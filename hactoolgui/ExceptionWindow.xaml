<Window x:Class="HACGUI.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HACGUI"
        mc:Ignorable="d"
        Title="ExceptionWindow" Height="450" Width="350">
    <Grid>
        <DockPanel>
            <Label Content="Oops! Something went wrong..." FontSize="20" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="40" DockPanel.Dock="Top"/>
            <TextBox Name="TextBox" TextWrapping="NoWrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        </DockPanel>
    </Grid>
</Window>
