<Window x:Class="HACGUI.Main.TitleManager.ApplicationWindow.Tabs.TitleMountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HACGUI.Main.TitleManager.ApplicationWindow.Tabs"
        mc:Ignorable="d"
        Title="TitleMountDialog" Height="100" Width="400">
    <Grid>
        <DockPanel>
            <Label DockPanel.Dock="Top">What kind of partition do you want to mount?</Label>
            <DockPanel DockPanel.Dock="Bottom">
                <Button DockPanel.Dock="Right" Width="100" Click="MountClicked">Mount</Button>
                <ComboBox Name="ComboBox" DockPanel.Dock="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
